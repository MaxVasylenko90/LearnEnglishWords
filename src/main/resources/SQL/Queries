CREATE TABLE Synonyms
(
    id INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY
);
CREATE TABLE Apps_user
(
    id INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    email VARCHAR(100) NOT NULL UNIQUE,
    password VARCHAR(100) NOT NULL
);
CREATE TABLE Dictionary
(
    id INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    user_id INT REFERENCES Apps_user(id) ON DELETE CASCADE,
    language VARCHAR(100)
);
CREATE TABLE Word
(
    id INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    spelling VARCHAR(100) NOT NULL UNIQUE,
    transcription VARCHAR(100),
    translation VARCHAR(100),
    synonyms_id INT REFERENCES Synonyms(id) ON DELETE CASCADE,
    dictionary_id INT REFERENCES Dictionary(id) ON DELETE CASCADE,
    is_synonym BOOLEAN
)



